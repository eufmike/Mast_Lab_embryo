%% colormap generator

bit = 8
colormap_blue = [repelem(0, 255) ; repelem(0, 255) ;linspace(0, 255, 255)]';
colormap_green = [repelem(0, 255) ; linspace(0, 1, 255); repelem(0, 255)]';
colormap_red = [linspace(0, 1, 255);  repelem(0, 255); repelem(0, 255)]';

colormap_3c = {colormap_blue, colormap_green, colormap_red};

save('colormaps', 'colormap_3c');